<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.Broken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI">

    <StackPanel>
        <TextBlock Text="Broken Controls" Style="{StaticResource PageHeader_Style}"/>
        <local:MasonryPanelWithProgressiveLoading Style="{StaticResource Panel_Style}">
            <local:GroupBox_Demo HorizontalAlignment="Center"/>
            <local:RadSplitButton_Demo HorizontalAlignment="Center"/>
            <local:RadTabControl_Demo HorizontalAlignment="Center"/>
            <local:RadToggleSwitchButton_Demo HorizontalAlignment="Center"/>
            <local:RadGridView_Demo HorizontalAlignment="Center"/>
            <local:RadTileView_Demo HorizontalAlignment="Center"/>
        </local:MasonryPanelWithProgressiveLoading>
    </StackPanel>
</UserControl>
