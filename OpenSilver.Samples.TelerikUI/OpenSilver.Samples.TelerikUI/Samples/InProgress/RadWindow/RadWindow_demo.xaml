<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.RadWindow_demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
    xmlns:controls="using:Telerik.Windows.Controls">

    <ContentControl Style = "{StaticResource Card_Style}" Height="210" Width="180">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height = "Auto" />
            </Grid.RowDefinitions >
            <ContentControl Content="Rad Window" Foreground="#FFFFA443" Background="#FFCB9E73" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel Grid.Row="1" Orientation= "Horizontal" HorizontalAlignment= "Center" VerticalAlignment= "Center">
                <controls:RadWindow Height = "60" Width= "100" BorderThickness="1,1,1,1" Content="This is a window" HorizontalContentAlignment ="Center" VerticalContentAlignment="Center" Header="Window" />
            </StackPanel>

            <Button Grid.Row= "2" Content= "VIEW SOURCE..." Click= "ButtonViewSource_Click" Background= "#FF6F7DFF" Style= "{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>
</UserControl>
