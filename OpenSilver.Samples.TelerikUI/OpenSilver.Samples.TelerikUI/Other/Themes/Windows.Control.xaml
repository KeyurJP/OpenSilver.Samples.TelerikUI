    <DataTemplate x:Key="DefaultTicksTemplate">
        <Rectangle Width="1" ToolTipService.ToolTip="{Binding}" Height="5" Fill="{StaticResource StrongBrush}"/>
    </DataTemplate>

    <!--RAD TICK BAR-->
    <Style TargetType="controls:RadTickBar" x:Key="RadTickBarStyle">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Width" Value="18"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <controls:TickBarPanel Background="Transparent"/>
                </ItemsPanelTemplate>
            </Setter.Value>
