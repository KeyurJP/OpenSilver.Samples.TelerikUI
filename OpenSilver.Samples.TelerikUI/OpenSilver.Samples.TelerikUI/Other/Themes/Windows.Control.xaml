            <Rectangle Margin="2 2 -2 -2" Opacity="0.66" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="1"/>
            <Rectangle Margin="3 3 -1 -1" Fill="{TemplateBinding Background}"/>
